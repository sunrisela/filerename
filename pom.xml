            <!-- javaFX fat jar build tools -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.3</version>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <transformers>
                        <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                            <mainClass>club.youtee.filerename.BootLauncher</mainClass>
                        </transformer>
                    </transformers>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>gluonfx-maven-plugin</artifactId>
                <version>1.0.23</version>
                <configuration>
                    <mainClass>club.youtee.filerename.MainApplication</mainClass>
                    <!--<javafxStaticSdkVersion>${javafx.version}</javafxStaticSdkVersion>-->
                    <!-- 涉及反射的类 -->
                    <reflectionList>
                        <list>club.youtee.filerename.controller.MainController</list>
                        <list>org.kordamp.bootstrapfx.BootstrapFX</list>
                        <list>javafx.scene.layout.VBox</list>
                        <list>javafx.scene.layout.GridPane</list>
                        <list>javafx.scene.layout.FlowPane</list>
                        <list>javafx.scene.control.SplitPane</list>
                        <list>javafx.scene.control.RadioButton</list>
                        <list>javafx.scene.control.CheckBox</list>
                        <list>javafx.scene.control.ListView</list>
                    </reflectionList>
                    <runtimeArgs>
                        <arg>-Dfile.encoding=UTF-8</arg>
                    </runtimeArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>
